<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all"
    tools:context="com.example.manac.plano.MainActivity">


    <RelativeLayout
        android:id="@+id/imagenLay"
        android:layout_width="379dp"
        android:layout_height="229dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/set_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:layout_below="@+id/show_options_button"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/formLayout"
        android:layout_width="180dp"
        android:layout_height="257dp"
        android:layout_marginTop="281dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="271dp">

        <EditText
            android:id="@+id/efecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/show_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cargar imagen"
            android:layout_below="@+id/Bfecha"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/Bfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/efecha"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="14dp"
            android:text="fecha"
            tools:layout_editor_absoluteX="282dp"
            tools:layout_editor_absoluteY="153dp" />

        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Bfecha"
            android:layout_alignStart="@+id/Bfecha"
            android:layout_below="@+id/show_options_button"
            android:layout_marginTop="12dp"
            android:text="Guardar" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/extintor"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@mipmap/extintor"
        tools:layout_editor_absoluteY="429dp"
        tools:layout_editor_absoluteX="204dp" />

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignLeft="@+id/warning"
        android:layout_alignStart="@+id/warning"
        android:layout_below="@+id/warning"
        android:background="@mipmap/flecha"
        tools:layout_editor_absoluteY="348dp"
        tools:layout_editor_absoluteX="281dp" />

    <ImageView
        android:id="@+id/hands"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/extintor"
        android:background="@mipmap/hands"
        tools:layout_editor_absoluteY="281dp"
        tools:layout_editor_absoluteX="281dp" />

    <ImageView
        android:id="@+id/conector"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/conector"
        tools:layout_editor_absoluteY="356dp"
        tools:layout_editor_absoluteX="204dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/warning"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignLeft="@+id/conector"
        android:layout_alignStart="@+id/conector"
        android:layout_below="@+id/conector"
        android:background="@mipmap/warning"
        tools:layout_editor_absoluteY="281dp"
        tools:layout_editor_absoluteX="204dp" />






</android.support.constraint.ConstraintLayout>
